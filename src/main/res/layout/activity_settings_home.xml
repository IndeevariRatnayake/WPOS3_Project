<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".UI.Reports.ReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/bg" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_header" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operations"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/tleButton"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="TLE Key Download" />

            <Button
                android:id="@+id/pinButton"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="PIN Key Injection" />

            <Button
                android:id="@+id/pinQR"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Clear Pending QR" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer Tools"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/pushTestButton"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Push Pull Test" />

            <Button
                android:id="@+id/eraseKeyButton"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Erase all keys" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Table Config"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/editTableButton"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Edit Table" />

            <Button
                android:id="@+id/setMerchantPwButton"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Set Merchant Password" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>