<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Other.Last4Activity"
    android:background="@drawable/gradient"
    android:padding="50dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Enter Last 4 Digits"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="4">

        <EditText
            android:id="@+id/etLast4Digits"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorBlack"
            android:ems="10"
            android:foregroundTint="@color/colorBlack"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:hint="Last 4 Digits"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            tools:backgroundTint="@color/colorBlack" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="1">

        <!--Button
            android:id="@+id/btnConfirm_Last4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Confirm"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_shape"/-->

        <Button
            android:id="@+id/btnCancel_Last4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"/>
    </RelativeLayout>
</LinearLayout>